<?xml version="1.0" encoding="UTF-8" ?><!--xml版本号和编码方式  -->
<c3p0-config>
	<default-config> 
		<property name="jdbcUrl">jdbc:mysql://localhost:3306/kufang<!--连接参数url  -->
		    </property>
		<property name="driverClass">com.mysql.jdbc.Driver</property><!--mysql连接驱动  -->
		<property name="user">root</property><!--数据库用户名  -->
		<property name="password">123456</property><!-- 密码 -->
		
		<property name="acquireIncrement">3</property><!--连接池在无空闲连接可用时一次性创建的新数据库连接数为3  -->
		<property name="initialPoolSize">10</property><!--连接池初始化时创建的连接数为10  -->
		<property name="minPoolSize">3</property><!--连接池保持的最小连接数为3  -->
		<property name="maxPoolSize">10</property><!--连接池中拥有的最大连接数为10  -->
	</default-config>
</c3p0-config>